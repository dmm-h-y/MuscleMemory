<div class="container">
<h2>ログイン</h2>

<%= form_with model: @user, url: user_session_path do |f| %>
  <div class="field">
    <%= f.label :'メールアドレス', class: "col-md-3" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-md-5 form-control" %>
  </div>

  <div class="field">
    <%= f.label :'パスワード', class: "col-md-3" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "col-md-5 form-control" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン",class: "btn btn-sm btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

