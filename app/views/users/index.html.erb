<div class="container">
  <div class="row">
    <h3><i class="fas fa-users"></i>ユーザー一覧</h3>
  </div>

  <table class="table">
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
    </tr>
    <% @user.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td>
        <%= link_to user_path(user) do %>
          <%= user.name %>
        <% end %>
      </td>
      <td><%= user.email %></td>
    </tr>
    <% end %>
  </table>

</div>